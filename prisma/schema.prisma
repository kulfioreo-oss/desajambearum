generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UMKM {
  id          String   @id @default(cuid())
  name        String
  description String?
  category    String
  owner       String
  phone       String?
  address     String?
  dusun       String
  products    String[] // Array of product names
  image       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relation to Products
  catalogProducts Product[]
}

model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String   // Hashed password
  email     String?  @unique
  name      String?
  role      String   @default("admin")
  isActive  Boolean  @default(true)
  lastLogin DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float?
  images      String[] // Array of image URLs
  category    String?
  isAvailable Boolean  @default(true)
  sortOrder   Int      @default(0)
  
  // Relation to UMKM
  umkmId      String
  umkm        UMKM     @relation(fields: [umkmId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([umkmId])
  @@index([isAvailable])
}

model HomepageImage {
  id          String   @id @default(cuid())
  section     String   // hero, stats, gallery, etc.
  title       String?  // Optional title for the image
  description String?  // Optional description
  imageUrl    String   // URL to the image
  altText     String   // Alt text for accessibility
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0) // For ordering images in the same section
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([section])
  @@index([isActive])
}
